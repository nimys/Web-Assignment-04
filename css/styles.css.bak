@import url(http://fonts.googleapis.com/css?family=Lily+Script+One);

article, aside, figure, footer, header, nav, section {
    display: block;
}
body {
	font-family: Arial, Helvetica, sans-serif;
	width: 800px;
	margin: 10px auto;
    padding: 20px 20px 10px 20px;
    border: 1px dotted black;
}
h1 {
	background: #dfe3e6 url('../img/sos.png') repeat center;
	color: black;
		margin: 0px;
	padding: 40px 0 4px 7px;
	color: black;
	font-family: 'Lily Script One';
	font-size: 40px;
	font-weight:normal;
}

a:link {
	text-decoration:none;
	color: #414569;	
}

a:visited {
	text-decoration:none;
	color: #414569
}

a:hover {
	text-decoration:underline;
	color: #242842;
}

a:active {
	text-decoration:underline;
}

p {
	color: black;
	font-family: verdana;
	font-size: 11px;
}

img.thumb {
	padding: 5px;
	border: solid #d3d3d3 1px;
	margin: 1px;
	
}
